<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.fabric.kewbr.talking_crocodile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity_game_view2"></activity>
        <activity
            android:name=".View.GameView"
            android:label="Болтливый крокодил"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.PositionActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.Settings"
            android:theme="@style/AppTheme.NoActionBar">
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ec36cb8b2a6a19dc03003abc3b5568cac27e2764" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".View.Rules"
            android:label="Правила"
            android:parentActivityName=".View.MainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Round"
            android:screenOrientation="portrait"
            android:label="Меню"
            android:parentActivityName=".View.MainMenu"></activity>
    </application>

</manifest>